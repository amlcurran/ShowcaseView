          android:versionCode="3500"
          android:versionName="3.5">

    <original-package android:name="com.espian.showcaseview.sample"/>

    <uses-sdk
            android:targetSdkVersion="18"
            android:minSdkVersion="7"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:allowBackup="true">

        <activity
                android:name=".SampleActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".v14.ActionItemsSampleActivity"
                android:theme="@style/SampleTheme"/>
        <activity
                android:name=".v14.MultipleActionItemsSampleActivity"
                android:theme="@style/SampleTheme"/>
        <activity
                android:name=".legacy.MultipleShowcaseSampleActivity"/>
        <activity
                android:name=".fragments.ShowcaseFragmentActivity"/>
